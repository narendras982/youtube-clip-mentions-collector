# ==============================================
# YouTube RSS Mention Detection System
# Environment Configuration Template
# ==============================================

# Node Environment
NODE_ENV=development

# ============================================================================
# SERVICE ARCHITECTURE:
# Frontend (3000) → Backend API (3001) → [MongoDB, Redis, Gemini AI]
# Frontend (3000) → Mention Detection (8002) → [PyTorch, spaCy Models]
# Backend uses Gemini AI for sentiment analysis (not Python ML service)
# ============================================================================

# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://admin:youtube_mentions_2024@localhost:27017/youtube_mentions?authSource=admin
MONGODB_DATABASE=youtube_mentions

# Redis Configuration
REDIS_URL=redis://:youtube_redis_2024@localhost:6379
REDIS_PASSWORD=youtube_redis_2024

# JWT Authentication
JWT_SECRET=YOUTUBE_MENTIONS_JWT_SECRET_2024_SECURE
JWT_EXPIRE=7d

# ML Services URLs
MENTION_SERVICE_URL=http://localhost:8002
TRANSCRIPT_API_URL=http://localhost:8001

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_API_QUOTA_LIMIT=10000

# RSS Configuration
RSS_POLLING_INTERVAL=3600000
RSS_MAX_FEEDS=100
RSS_REQUEST_TIMEOUT=30000

# VPN/Proxy Configuration (for cloud deployment)
VPN_ROTATION_ENABLED=false
VPN_PROVIDERS=webshare,nordvpn,expressvpn,surfshark

# WebShare Proxy Configuration (working credentials)
WEBSHARE_USERNAME=enxguasp
WEBSHARE_PASSWORD=uthv5htk0biy

# Legacy API keys for other providers
NORDVPN_API_KEY=your_nordvpn_api_key_here
EXPRESSVPN_API_KEY=your_expressvpn_api_key_here
SURFSHARK_API_KEY=your_surfshark_api_key_here

# Mention Detection Configuration
MENTION_DETECTION_LANGUAGES=en,hi,mr
MENTION_CONFIDENCE_THRESHOLD=0.7
FUZZY_MATCH_THRESHOLD=0.8

# Clip Generation Configuration
CLIP_CONTEXT_SECONDS_BEFORE=20
CLIP_CONTEXT_SECONDS_AFTER=20
CLIP_MAX_DURATION=300

# Socket.io Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3001
SOCKET_IO_MAX_CONNECTIONS=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_FILES=7
LOG_MAX_SIZE=10m

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
UPLOAD_MAX_SIZE=10mb
UPLOAD_ALLOWED_TYPES=json,csv,txt

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Development Settings
DEBUG_RSS_FEEDS=false
DEBUG_TRANSCRIPT_EXTRACTION=false
DEBUG_MENTION_DETECTION=false

# Production Settings
ENABLE_NGINX=false
ENABLE_SSL=false
SSL_CERT_PATH=./config/ssl/cert.pem
SSL_KEY_PATH=./config/ssl/key.pem